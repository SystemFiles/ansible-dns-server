{% for host in zone_hosts -%}
zone "{{ host.domain }}" {
        type master;
        file "/etc/bind/zones/db.{{ host.domain }}";
};
{% endfor %}

zone "{{ subnet_reversed_octet }}.in-addr.arpa" {
        type master;
        file "/etc/bind/zones/db.{{ subnet_reversed_octet }}";
};